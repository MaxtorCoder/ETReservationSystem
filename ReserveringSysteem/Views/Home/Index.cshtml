@model List<ReserveringModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @if (Model.Count == 0) {
        <p>Nog geen Vestigingen!</p>
        <a asp-controller="Reservering" asp-action="Index">Vestiging Toevoegen</a>
    } else {
        <form asp-action="">
            <label for="vestiging">Kies Vestiging:</label>
            <select id="vestiging" name="vestigingList">
                @foreach (var vestiging in Model)
                {
                    <option value="vestiging.ID">@vestiging.Naam</option>
                }
            </select>
        </form>
    }
</div>